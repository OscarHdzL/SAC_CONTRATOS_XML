@model Guid
@{
    ViewBag.Title = "Consulta";
    Layout = null;
    String Selected(String Input, String Model)
    {
        return Input == Model ? "selected" : "";
    }
    //Boolean Token = Model.TokenAutorizacion == null ? false : true;
    //FileManager.FileManager File = new FileManager.FileManager("EndPointDesCarga");
}



@section ViewScripts{

    <script src="~/Resources/Solicitud/jquery.SolicitudActualiza.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.13.4/jquery.mask.min.js"></script>

}

@section ViewStyles{
    <link href="~/Resources/Solicitud/Salicitud.css" rel="stylesheet" />
}


<input type="hidden" id="txt_id" value="@ViewBag.id" />

<div class="row">
    <div class="col-xs-12">
        <div class="box box-default">
            <div class="box-body">
                <div class="row">
                    <div class="col-lg-3">
                        <label>Número de solicitud:</label>
                        <input type="text" disabled id="txt_numsol" value="" class="form-control" />
                    </div>
                    <div class="col-lg-3">
                        <label>Tipo de solicitud:</label>
                        <select disabled id="drop_TipoSolicitud" class="form-control">
                            <option value="">Seleccione...</option>
                            @*<option @Selected("obra", Model.TipoSolicitud) value="obra">Obra</option>
                    <option @Selected("servicio", Model.TipoSolicitud) value="servicio">Servicio</option>*@
                        </select>
                    </div>
                    <div class="col-lg-3">
                        <label>Tipo contrato:</label>
                        <select disabled id="drop_TipoContrato" class="form-control">
                            <option value="">Seleccione...</option>
                            @*<option @Selected("anual", Model.TipoContrato) value="obra">Anual</option>
                    <option @Selected("plurianual", Model.TipoContrato) value="servicio">Plurianual</option>*@
                        </select>
                    </div>
                    <div class="col-lg-3">
                        <label>Fecha solicitud:</label>
                        <div class='input-group date' id='datetimepicker1'>
                            <input disabled type='text' id="txt_FechaSolicitud" value="" class="form-control" />
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-calendar"></span>
                            </span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-3">
                        <label>Elaboró:</label>
                        <input disabled type="text" id="txt_elaboro" value="" class="form-control" />
                    </div>
                    <div class="col-lg-3">
                        <label>Dependencia:</label>
                        <select disabled id="drop_dependencia" class="form-control">
                            @*<option value="@Model.TBLENT_DEPENDENCIA_id">@Model.TBLENT_DEPENDENCIA.DEPENDENCIA</option>*@
                        </select>
                    </div>
                    <div class="col-lg-3">
                        <label>Área:</label>
                        <select disabled class="form-control" id="drop_area">
                            @*<option value="@Model.TBLENT_AREA_id">@Model.TBLENT_AREA.AREA</option>*@
                        </select>
                    </div>
                    <div class="col-lg-3">
                        <label>Proyecto:</label>
                        <select disabled class="form-control" id="drop_Proyecto">
                            @*<option value="@Model.TBLENT_PROYECTO_id">@Model.TBLENT_PROYECTO.PROYECTO</option>*@
                        </select>
                    </div>

                </div>
                <div class="row">
                    <div class="col-lg-8">
                        <label>Descripción del bien, arrendamiento o servicio a contratar: </label>
                        <textarea disabled placeholder="Descripción" id="txt_descripcion" class="form-control"></textarea>
                    </div>
                    <div class="col-lg-4">
                        <label>Nombre del bien ó servicio: </label>
                        <input type="text" class="form-control" id="txt_nom_bien_servicio" disabled />
                    </div>
                </div>
                <div class="row margin-bottom">
                    <div class="col-lg-2">
                        <label>Monto solicitud: </label>
                        <input disabled type="number" min="0" step="0.01" data-number-to-fixed="2" data-number-stepfactor="100" class="form-control currency" id="txt_montosolicitud" value="" />

                    </div>
                    <div class="col-lg-2">
                        <label>Monto autorizado: </label>
                        <input type="number" min="0" step="0.01" data-number-to-fixed="2" data-number-stepfactor="100" class="form-control currency" id="txt_montoautorizado" value=""  disabled/>
                    </div>
                    <div class="col-lg-8">
                        <label>Comentarios: </label>
                        <textarea id="txt_comentarios" class="form-control" disabled></textarea>
                    </div>
                    <div class="col-lg-3" hidden>
                        <label>Comentarios suficiencia:</label>
                        <textarea id="txt_comentarios_suf" class="form-control" disabled></textarea>
                    </div>
                </div>
                <div class="row margin-bottom text-center">
                    <div class="col-lg-2"></div>
                    <div class="col-lg-8">
                        <label>Documento adjuntos</label>
                        <table class="table text-center table-bordered" id="tbl_adjuntos">
                            <thead>
                                <tr>
                                    <th scope="col">Nom. documento</th>
                                    <th scope="col">Tipo de documento</th>
                                    <th scope="col">Acción</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                    <div class="col-lg-2">
                    </div>
                </div>
                <div class="row" hidden>
                    <div class="col-lg-6 text-center">
                        <br />

                        <a onclick="$('#viewer_window').modal('show');" id="Download_file"> Descargar Documento Solicitante </a>

                    </div>
                    <div class="col-lg-6  text-center">
                        <br />
                        <label>Documento autorización:</label>
                        <br /><br />
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-4"></div>
                    <div class="col-lg-4 Container-buttons">

                    </div>
                    <div class="col-lg-4"></div>

                </div>



            </div>
        </div>
    </div>
</div>









