@{
    Layout = "~/Views/MasterPages/Master.cshtml";
}

@section ViewScripts{
    <script src="~/Resources/MesaValidacion/MesaVal.js"></script>
}

<input type="hidden" value="@ViewData["MV"].ToString()" id="MV" />  
<input type="hidden" value="" id="IDD" /> 


<input type="hidden" value="" id="TOKENSS" />



<div class="row">
    <div class="col-xs-12">
        <div class="box box-default">
            <div class="box-body">
                <div class="row">
                    <div class="col-lg-4">
                        <label>Folio Solicitud:</label>
                        <input type="text" id="MV_NUM_SOL" disabled class="form-control" />
                    </div>
                    <div class="col-lg-4">
                        <label>Nombre Documento:</label>
                        <input type="text" id="NomDoc" class="form-control" />
                    </div>
                    <div class="col-lg-4">
                        <label>Estatus Documento:</label>
                        <input type="text" class="form-control" value="Validación Solicitada" disabled />
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-8">
                        <label>Observaciones:</label>
                        <textarea class="form-control" id="MVoberservaciones"></textarea>
                    </div>
                </div>
                <div class="row"><br /><br /></div>
                <div class="row">
                    <div class="col-lg-4"></div>
                    <div class="col-lg-4">
                        <input type="file" id="MV_NUM_FILE" class="form-control" />
                    </div>

                    <div class="col-lg-4"></div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-xs-12">
        <div class="box box-default">
            <div class="box-body">
                <div class="row text-center">
                    <button onclick="sendfile()" type="button" class="btn btn-success">Guardar</button>
                    <button type="button" class="btn btn-warning">Cancelar</button>
                </div>
            </div>
        </div>
    </div>
</div>



<div class="row">
    <div class="col-xs-12">
        <div class="box box-default">
            <div class="box-body">
                <div class="row text-center">
                    <div class="col-lg-12">
                        <table id="TBLDOCUMENTS" class="display" style="width:100%">
                            <thead>
                                <tr>
                                    <th>Folio Solicitud:</th>
                                    <th>Nombre del documento:</th>

                                    <th>Versión</th>
                                    <th>Comentario</th>

                                    <th>Acciones</th>

                                </tr>
                            </thead>
                            <tbody>
                            </tbody>

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


 
