@{

    Layout = null;
}


<div class="box box-default formalizacion_div" style="display:none">

    <hr class="box-body">

    <div class="row text-center center" >
        <div class="col-lg-2"></div>
        <div class="col-lg-8">
            <input type="file" class="form-control" id="doc_formalizacion" accept="application/pdf,application/vnd.openxmlformats-officedocument.wordprocessingml.document" />
             <small class="form-text text-danger">El archivo no debe de pesar mas de 25 MB.</small>
             <br>
              <small class="form-text text-danger">Solo se aceptan formatos .DOCX y .PDF .</small>
            <br>
            <select id="select-type-document" class="form-control"></select>
            <br>
            <button class="btn btn-primary" onclick="loadFile()" id="fromalizacion_doc"><i class="fa fa-fw fa-upload"></i>Subir documento</button>
            <button class="btn btn-primary" onclick="loadFileActualizar()" id="fromalizacion_doc_actualizar" style="display:none"><i class="fa fa-fw fa-upload"></i>Subir documento</button>
        </div>
        <div class="col-lg-2"></div>
    </div>
    <br>
    <div class="row text-center center">
        <div class="col-lg-2"></div>
        <div class="col-lg-8">
            <br>
            <br>
            <table class="table table-striped" id="table-files">
                <thead>
                    <tr>
                        <th scope="col">Tipo</th>
                        <th scope="col">Documento</th>
                    </tr>
                </thead>
                <tbody id="table-files-body">
                </tbody>
            </table>
        </div>
        <div class="col-lg-2"></div>
    </div>


    <div class="row text-right" id="fromalizacion_ins">
        <button onclick="validacion_completa()" class="btn btn-success " style="margin-right:10px;margin-top: 30px;"><i class="fa fa-fw fa-check-circle-o"></i>Validar</button>
    </div>
    <div class="row text-center" id="fromalizacion_upd" style="display:none;">
        <button onclick="save_contrato_actualiza()" style="margin-right:10px;margin-top: 30px;" type="button" class="btn btn-success btn-fomali">Actualizar</button>
    </div>

</div>

<input type="hidden" id="estatus_act" />


<!-- Modal -->
<div id="Loaderformaliz" class="modal" role="dialog">
    <table style="min-height:100%;min-width:100%; width:100%; height:100%;">
        <tr>
            <td style="text-align:center;">
                <img style="width: 20%;" src="~/Images/loading.gif" />
                <br />
                <label style="color:white;"><strong>Un momento por favor ...</strong></label>
            </td>
        </tr>
    </table>
</div>