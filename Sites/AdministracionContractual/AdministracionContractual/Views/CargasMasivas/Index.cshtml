
@{

    Layout = "~/Views/MasterPages/Master.cshtml";

}

@section ViewScripts{
    <script src="~/Resources/CargasMasivas/CargasMasivas.js"></script>
}


<section class="content">
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">Carga másiva áreas</h3>
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
                        title="Collapse">
                    <i class="fa fa-minus"></i>
                </button>
            </div>
        </div>
        <div class="box-body">
            
            <div class="col-lg-12">

                <div class="row">
                    <div class="col-lg-12">
                        <h2>Carga Masiva de Areas</h2>
                        <ul class="nav nav-tabs">

                            <li id="MM1" class="item-area"><a data-toggle="tab" href="#menu1">Areas</a></li>
                            <li id="MM2" class="item-area"><a data-toggle="tab" href="#menu2">Interlocutores</a></li>
                    
                        </ul>


                        <div id="menu1" class="tab-pane fade">
                            <div class="row">
                                <input type="file" id="CM_input_area" class="form-control" />
                            </div>
                            <div class="row text-center">
                                <br />
                                <button onclick="SendCMArea();" class="btn btn-success" type="button"> Guardar </button>
                            </div>
                            <div class="row">
                                <table id="tbl_log_area" class="display" style="width:100%">
                                    <thead>
                                        <tr>
                                            <th>Id</th>
                                            <th>Tipo</th>
                                            <th>Descripción</th>
                                            <th>Estatus</th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                            </div>

                        </div>
                        <div id="menu2" class="tab-pane fade">
                            <div class="row">
                                <input type="file" id="fileuploadproveedor" class="form-control" />
                            </div>                            
                            <div class="row text-center">
                                <br />
                                <button class="btn btn-success " type="button" onclick="downLayoutProveedores()">Descargar Layout </button>
                            </div>
                            <div class="row text-center">
                                <br />
                                <button class="btn btn-success " type="button" onclick="SendCMProveedores()"> Guardar </button>
                            </div>

                            <div class="row">
                                <table id="tbl_log_provedores" class="display" style="width:100%">
                                    <thead>
                                        <tr>
                                            <th>Id</th>
                                            <th>Tipo</th>
                                            <th>Descripción</th>
                                            <th>Estatus</th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                            </div>

                        </div>
                        <div id="menu3" class="tab-pane fade">
                            <div class="row">
                                <input type="file" class="form-control"/>
                            </div>
                            <div class="row text-center">
                                <br />
                                <button class="btn btn-success" type="button"> Guardar </button>
                            </div>
                        </div>
                    </div>


                </div>



            </div>
            
        </div>


    </div>

</section>