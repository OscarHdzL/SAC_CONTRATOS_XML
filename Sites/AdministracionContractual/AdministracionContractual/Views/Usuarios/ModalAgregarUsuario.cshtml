
<div class="modal" id="ModalAgregarUsuario" data-backdrop="static" data-keyboard="false" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document" style="WIDTH: 90%;">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h3 class="modal-title" id="exampleModalLabel">Agregar usuario</h3>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-lg-4">
                        <label>Nombre</label>
                        <input type="text" id="txt_Nombre" class="form-control txt_Nombre Clean" placeholder="Nombre" />
                    </div>
                    <div class="col-lg-4">
                        <label>Apellido paterno</label>
                        <input type="text" id="txt_Apellido_Paterno" class="form-control txt_Apellido_Paterno Clean" placeholder="Apellido paterno" />
                    </div>
                    <div class="col-lg-4">
                        <label>Apellido materno</label>
                        <input type="text" id="txt_Apellido_Materno" class="form-control txt_Apellido_Materno Clean" placeholder="Apellido materno" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-4">
                        <label>RFC</label>
                        <input type="text" id="txt_RFC" class="form-control txt_RFC Clean" maxlength="13" placeholder="RFC" />
                    </div>
                    <div class="col-lg-2">
                        <label>Fecha inicial</label>
                        <div class='input-group date' id='datetimepicker1'>
                            <input type='text' id="txt_Fecha_Inicial" class="form-control Clean" />
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-calendar"></span>
                            </span>
                        </div>
                    </div>
                    <div class="col-lg-2">
                        <label>Fecha final</label>
                        <div class='input-group date' id='datetimepicker1'>
                            <input type='text' id="txt_Fecha_Final" class="form-control Clean" />
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-calendar"></span>
                            </span>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <label>Nombre de usuario</label>
                        <input type="text" id="txt_usuario" class="form-control txt_usuario Clean" placeholder="Nombre de usuario" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-4">
                        <label>Correo electrónico</label>
                        <input type="text" id="txt_Correo" class="form-control txt_Correo Clean" placeholder="Correo electrónico" />
                    </div>
                    <div class="col-lg-4">
                        <label>Teléfono</label>
                        <input type="text" id="Telefono" class="form-control Telefono Clean" placeholder="Teléfono" />
                    </div>
                    <div class="col-lg-4">
                        <label>Extensión </label>
                        <input type="text" id="Extension" class="form-control Extension Clean" placeholder="Extensión" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-4">
                        <label>Dependencia</label>
                        <select name="DependenciaA" id="DependenciaA" class="form-control DependenciaA Clean"></select>
                    </div>
                    <div class="col-lg-4">
                        <label>Área</label>
                        <select name="ddl_Area" id="ddl_Area" class="form-control ddl_Area Clean"></select>
                    </div>
                    <div class="col-lg-4">
                        <label>Rol</label>
                        <select name="ddl_Rol" id="ddl_Rol" class="form-control ddl_Rol Clean"></select>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-lg-5">
                    </div>
                    <div class="col-lg-2">
                        <div class="form-check hidden">
                            <input class="form-check-input" type="checkbox" value="" id="SuperUser">
                            <label class="form-check-label" for="SuperUser">
                                Super Usuario
                            </label>
                        </div>
                    </div>
                    <div class="col-lg-5">
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-4">
                        <label>Dependencias secundarias</label>
                        <table class="table table-hover" id="tbl_dependencias">
                            <thead>
                                <tr>
                                    <th scope="col">Nombre</th>
                                    <th scope="col">Asignado</th>
                                </tr>
                            </thead>
                            <tbody id="tbl_body_dependencias">                              
                            </tbody>
                        </table>
                    </div>
                </div>
                <br />
            </div>
            <div class="modal-footer">
                <div align="center">
                    <button type="button" class="btn btn-primary" id="GuardarUsuario">Guardar</button>
                    <button type="button" id="Close" class="btn btn-danger" data-dismiss="modal">Cancelar</button>
                </div>
            </div>
       </div>
    </div>
</div>