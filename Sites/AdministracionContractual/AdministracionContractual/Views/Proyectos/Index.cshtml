@using Microsoft.AspNetCore.Http;
@inject IHttpContextAccessor httpContextAccessor;
@model Guid
@{

    Layout = "~/Views/MasterPages/Master.cshtml";
    Dictionary<String, String> ruta = new Dictionary<String, String>();
    ruta.Add(@"\Contrato\Index", "Lista");
    ruta.Add("-", "Proyectos");

}
@section ViewScripts{
    <script src="~/Resources/Proyectos/Jquery.Proyectos.js"></script>
}

<section class="content">

    <div class="box box-default">
        <div class="box-header with-border">
            <h3 class="box-title">Proyectos</h3>
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" onclick="muestraModalAgregarProyectos();" data-toggle="tooltip"
                        title="Agregar proyecto">
                    Agregar proyectos
                    <i class="fa fa-fw fa-plus-circle"></i>
                </button>

                <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
                        title="Collapse">
                    <i class="fa fa-minus"></i>
                </button>
            </div>
        </div>

        <div class="box-body">
            <div class="row">
                <div class="col-lg-4">
                </div>
                <div class="col-lg-3" style="text-align:center">
                    <label>Ejercicio</label>
                    <select name="Ejercicio" id="Ejercicio" class="form-control"></select>
                </div>
                <div class="col-lg-5">
                </div>
            </div>
            <div class="row air" style="margin-top: 1%;">

                <div class="col-lg-12">

                    <table id="tbl_Proyectos" class="display" style="width:100%">
                        <thead>
                            <tr>
                                <th>No.</th>
                                <th>Proyecto</th>
                                <th>Fecha inicio</th>
                                <th>Fecha fin</th>
                                <th>Contratos</th>
                                <th>Acción</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

@await Html.PartialAsync("ModalAgregarProyecto")
@await Html.PartialAsync("ModalEditarProyecto")