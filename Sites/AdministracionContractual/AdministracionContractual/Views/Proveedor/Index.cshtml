@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/MasterPages/Master.cshtml";
}
@section ViewScripts{
<script src="~/Resources/Proveedores/Jquery.Proveedores.js"></script>
<script src="~/Resources/Proveedores/Jquery.Editar_Proveedor.js"></script>

}
<section class="content">
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">Interlocutores</h3>
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" id="Add_Proveedor" data-toggle="tooltip"
                        title="Agregar interlocutor">
                    Agregar un nuevo interlocutor
                    <i class="fa fa-fw fa-plus-circle"></i>
                </button>
                <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
                        title="Collapse">
                    <i class="fa fa-minus"></i>
                </button>
            </div>
        </div>
        <div class="box-body">
            <table id="tbl_lista_proveedores" class="display" style="width:100%">
                <thead>
                    <tr>
                        <th>No.</th>
                        <th>Razón social</th>
                        <th>Representante legal</th>
                        <th>Correo</th>
                        <th>Contratos</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</section>
@await Html.PartialAsync("Modal_editar_proveedor")
@await Html.PartialAsync("Modal_detalle_proveedor")
<div id="Modal_Proveedor" class="modal" role="dialog">
    <div class="modal-dialog" style="width: 60%; padding-top: 5%; background-color: transparent;">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Nuevo interlocutor</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-lg-6">
                        <label>Tipo de interlocutor</label>
                        <select class="form-control" id="txt_tipo_interlocutor_new">
                        </select>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-6">
                        <label>Razón social</label>
                        <input type="text" class="form-control txt_clear" id="txt_razon_social" placeholder="Razón social" />
                    </div>
                    <div class="col-lg-6">
                        <label>RFC</label>
                        <input type="text" class="form-control txt_clear" id="txt_RFC" placeholder="RFC" maxlength="13" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-4">
                        <label>Representante</label>
                        <input type="text" class="form-control txt_clear" id="txt_representante" placeholder="Representante" />
                    </div>
                    <div class="col-lg-4">
                        <label>Apellido paterno</label>
                        <input type="text" class="form-control txt_clear" id="txt_apellido_paterno_r" placeholder="Apellido paterno" />
                    </div>
                    <div class="col-lg-4">
                        <label>Apellido materno</label>
                        <input type="text" class="form-control txt_clear" id="txt_apellido_materno_r" placeholder="Apellido materno" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-4">
                        <label>Ejecutivo de cuenta</label>
                        <input type="text" class="form-control txt_clear" id="txt_ejecutivo_cuenta" placeholder="Ejecutivo de cuenta" />
                    </div>
                    <div class="col-lg-4">
                        <label>Apellido paterno</label>
                        <input type="text" class="form-control txt_clear" id="txt_apellido_paterno_eje" placeholder="Apellido paterno" />
                    </div>
                    <div class="col-lg-4">
                        <label>Apellido materno</label>
                        <input type="text" class="form-control txt_clear" id="txt_apellido_materno_eje" placeholder="Apellido materno" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <label>Domicilio fiscal</label>
                        <textarea class="form-control txt_clear" id="txt_Domicilio_fiscal" placeholder="Domicilio fiscal" rows="2" style="resize:none"></textarea>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-6">
                        <label>Teléfono</label>
                        <input type="text" class="form-control txt_clear" id="txt_telefono" placeholder="Teléfono" />
                    </div>
                    <div class="col-lg-6">
                        <label>Correo electrónico</label>
                        <input type="text" class="form-control txt_clear" id="txt_correo_electronico" placeholder="Correo electrónico" />
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <div align="center">
                    <button type="button" class="btn btn-primary" id="btn_guardar_p">Guardar</button>
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>
</div>
