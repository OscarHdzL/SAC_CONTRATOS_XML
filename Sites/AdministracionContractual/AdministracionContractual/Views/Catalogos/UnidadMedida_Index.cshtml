
@{
    Layout = "~/Views/MasterPages/Master.cshtml";
}
@section ViewScripts{
    <script src="~/Resources/Catalogos/Unidad_Medida/Jquery.Unidad_Medida.js"></script>
    <script src="~/Resources/Catalogos/Unidad_Medida/Jquery.Unidad_Medida_Modificar.js"></script>
}

<div class="box">
    <div class="box-header with-border">
        <h3 class="box-title">Unidad de medida</h3>
        <div class="box-tools pull-right">
            <button type="button" class="btn btn-box-tool" id="Add_UnidadMedida" data-toggle="tooltip"
                    title="Agregar nuevo tipo de contrato">
                Agregar una nueva unidad de medida
                <i class="fa fa-fw fa-plus-circle"></i>
            </button>
            <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
                    title="Collapse">
                <i class="fa fa-minus"></i>
            </button>
        </div>
    </div>
    <div class="box-body">
        <table id="tbl_unidad_medida" class="display" style="width:100%">
            <thead>
                <tr>
                    <th>No.</th>
                    <th>Unidad de medida</th>
                    <th>Clave</th>
                    <th>Acciones</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

<div id="Modal_Unidad_Medida" class="modal" role="dialog">
    <div class="modal-dialog" style="width: 60%; padding-top: 5%; background-color: transparent;">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Nueva Unidad de Medida</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-lg-12">
                        <label>Unidad de Medida</label>
                        <textarea class="form-control clear_txt" id="txt_unidad_medida_add" style="resize:none" rows="2" placeholder="Unidad de medida" maxlength="100"></textarea>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <label>Clave</label>
                        <textarea class="form-control clear_txt" id="txt_clave_add" style="resize:none" rows="2" placeholder="Clave" maxlength="3"></textarea>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <div align="center">
                    <button type="button" class="btn btn-primary" id="btn_guardar_unidad_medida">Guardar</button>
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>
</div>

<input type="hidden" id="id_unidad_m" value="" />
<div id="Modal_Unidad_Medida_Upd" class="modal" role="dialog">
    <div class="modal-dialog" style="width: 60%; padding-top: 5%; background-color: transparent;">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Actualizar Unidad de Medida</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-lg-12">
                        <label>Unidad de Medida</label>
                        <textarea class="form-control clear_txt_upd" id="txt_unidad_medida_upd" style="resize:none" rows="2" placeholder="Unidad de medida" maxlength="100"></textarea>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <label>Clave</label>
                        <textarea class="form-control clear_txt_upd" id="txt_clave_upd" style="resize:none" rows="2" placeholder="Clave" maxlength="3"></textarea>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <div align="center">
                    <button type="button" class="btn btn-primary" id="btn_upd_unidad_m">Guardar</button>
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>
</div>

