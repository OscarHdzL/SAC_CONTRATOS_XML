@using Microsoft.Extensions.Options;
@using ApegoContractual = ApegoContractual;
@inject IOptions<ApegoContractual.EndPoint> OptionsApplicationConfiguration
@{
    Layout = null;
}
@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration

<link href="~/Content/bootstrap.css" rel="stylesheet">
<link href="~/lib/font-awesome/css/font-awesome.css" rel="stylesheet" />
<link href="~/Content/style.css" rel="stylesheet">
<link href="~/Content/style-responsive.css" rel="stylesheet">

<body onload="getTime()">
    <div class="container">

        <input type="hidden" id="EndPointAC" value="@OptionsApplicationConfiguration.Value.EndPointGateway" />
        <div id="showtime"></div>
        <div class="col-lg-12 nombre-sistema">
            <p>MÓDULO APEGO DE CONTRACTUAL</p>
        </div>
        <div class="col-lg-4 col-lg-offset-4">
            <div class="lock-screen">
                <h2><a data-toggle="modal" href="#myModal"><i class="fa fa-lock"></i></a></h2>
                <p style="color:white">INGRESAR</p>

                <!-- Modal -->
                <div aria-hidden="true" aria-labelledby="myModalLabel" role="dialog" tabindex="-1" id="myModal" class="modal" data-backdrop="static" data-keyboard="false">
                    <div class="modal-dialog">
                        <div class="modal-content" id="contentLogin">

                        </div>
                    </div>
                </div>
                <!-- modal -->
                <a href="@Configuration.GetSection("Front")["DM"]" class="btn btn-primary" data-dismiss="modal">ir al Módulo de Datos Maestros</a>
            </div>
        </div>

    </div>

    <script src="~/Resources/Dashboard/jquery/dist/jquery.min.js"></script>
    <script src="~/lib//bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@8"></script>
    <script src="~/Resources/SweetAlert/SweetAlert.js"></script>

    <script type="text/javascript" src="~/lib/jquery/jquery.backstretch.min.js"></script>
    <script>
        $.backstretch("../Images/login-bg.jpg", { speed: 500 });
    </script>

    <script type="text/javascript" src="~/Resources/Login/Login.js"></script>
</body>