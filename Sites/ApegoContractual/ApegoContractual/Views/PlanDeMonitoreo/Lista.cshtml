<section class="content">
    @await Html.PartialAsync("~/Views/VistaContrato/ParcialContrato.cshtml", idcontrato)
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">Lista de planes de monitoreo </h3>
