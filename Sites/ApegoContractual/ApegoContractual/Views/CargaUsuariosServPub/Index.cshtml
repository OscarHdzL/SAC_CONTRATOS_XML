
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/MasterPages/Master_SinContrato.cshtml";
}

@section ViewScripts{
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script src="~/Resources/CargaUsuariosServPub/CargaUsuariosServPub.js"></script>
}
@section ViewStyles{
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
}

@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor;

<input type="hidden" id="hdnIdInstancia" name="hdnIdInstancia" value="@HttpContextAccessor.HttpContext.Session.GetString("IdInstancia")" />
<input type="hidden" id="hdnIdUsuarioAlta" name="hdnIdUsuarioAlta" value="@HttpContextAccessor.HttpContext.Session.GetString("IdUsuario")" />

<section class="content">
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">Usuarios</h3>

            <div class="box-tools pull-right">
                <button type="button" id="btnCargaMasiva" class="btn btn-box-tool" title="Carga masiva">
                    Carga masiva
                    <i class="fa fa-fw fa-plus-circle"></i>
                </button>
                <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip">
                    <i class="fa fa-minus"></i>
                </button>
            </div>
        </div>
        <div class="box-body">
            <h4>Registros exitosos</h4>
            <table id="tbl_registrosexitosos" class="display" style="width:100%">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Correo</th>
                        <th>Resultado</th>
                    </tr>
                </thead>
            </table>
        </div>
        <div class="box-body">
            <h4>Registros fallidos</h4>
            <table id="tbl_registrosfallidos" class="display" style="width:100%">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Correo</th>
                        <th>Resultado</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</section>


<!-- Modal para cargar excel de carga masiva de contratos -->
<div id="modalCargaMasiva" class="modal" role="dialog" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h3 class="modal-title">Carga masiva de usuarios</h3>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-lg-4">
                        <label>Archivo</label>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-8">
                        <label style="color:gray">Solo deben cargar archivos en formato csv</label>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-4">
                        <input type="file" id="archivo" name="archivo" accept=".csv" />
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                <button type="button" id="btnCargarUsuariosServPub" class="btn btn-success">Guardar</button>
            </div>
        </div>
    </div>
</div>
