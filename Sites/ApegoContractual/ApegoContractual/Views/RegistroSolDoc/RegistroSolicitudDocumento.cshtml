@model Guid
@{
    ViewBag.Title = "Registro de solicitud de documento";
    Layout = "~/Views/MasterPages/Master.cshtml";

    <!--breadcrumb Dictionary-->
    Dictionary<String, String> ruta = new Dictionary<String, String>();
    ruta.Add(@"\Home\Index", "Inicio");
    ruta.Add(@"\Contrato\Index", "Lista de contratos");
    ruta.Add("-", "Solicitud de documentos");
}


@section ViewScripts{

    <script src="~/Resources/RegSolDoc/Jquery.RegSolDoc.js"></script>
    <script src="~/Resources/VistaContrato/Jquery.VistaContrato.js"></script>
}

<input type="hidden" id="idcontrato" value="@Model" />

<!--breadcrumb Partial View-->
@await Html.PartialAsync("~/Views/MasterPages/Breadcrumb.cshtml", ruta)

<section class="content">
    @await Html.PartialAsync("~/Views/VistaContrato/ParcialContrato.cshtml", Model)
    <div class="box">

        <div class="box-header with-border">
            <h3 class="box-title">Solicitud de documentos</h3>
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" id="AddRegistro" data-toggle="tooltip"
                        title="Agregar">
                    Agregar una nueva solicitud
                    <i class="fa fa-fw fa-plus-circle"></i>
                </button>

                <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
                        title="Collapse">
                    <i class="fa fa-minus"></i>
                </button>
            </div>
        </div>

        <div class="box-body">


            <div class="box-header with-border">

            </div>
            <div class="row">
                <div class="col-lg-12">

                    <table id="tbl_SolicitudDoc" class="display nowrap " cellspacing="0" style="width:100%">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Nombre documento</th>
                                <th>Área responsable</th>
                                <th>Nombre del responsable</th>
                                <th>Correo responsable</th>
                                <th>Fecha solicitud</th>
                                <th>Fecha entrega</th>
                                <th>Tipo de entrega</th>
                                <th>Observaciones / Comentarios</th>
                                <th>Correo solicitante</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                    </table>
                </div>

            </div>
            <br />

            <div class="row">
                <div class="col-lg-12" align="right">
                    <br />

                </div>
            </div>


        </div>
    </div>
</section>
@await Html.PartialAsync("~/Views/RegistroSolDoc/AddSolicDoc.cshtml")