<div id="RegistroExpediente" class="modal" role="dialog">
    <div class="modal-dialog" style=" padding-top: 5%; background-color: transparent;">
        <div class="modal-content">
            <div class="modal-header">

                <button type="button" class="close cerrarMEXP" id="cerrarMEXP" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>

                <h4 class="modal-title">Cargar un documento</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-lg-12">
                        <label>Seleccione el documento</label>
                        <br />
                        <input type="file" id="DocumentoEXP" class="form-control" accept=".pdf, .jpg, .jpeg, .png" />
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <div align="center">
                    <button type="button" class="btn btn-primary" id="RegistrarEXP">Guardar</button>
                    <button type="button" class="btn btn-default cerrarMEXP" id="cerrarMEXP" data-dismiss="modal">Cancelar</button>
                </div>
            </div>
        </div>

    </div>
</div>
