@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor httpContextAccessor
@{
    var IdContrato = httpContextAccessor.HttpContext.Session.GetString("IdContrato");
    if ((IdContrato != "") && (IdContrato != null))
    {
        Layout = "~/Views/MasterPages/Master.cshtml";
    }
    else
    {
        Layout = "~/Views/MasterPages/Master_SinContrato.cshtml";
    }
}

<section class="content">
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">Bienvenido al Sistema de Apego Contractual</h3>
            <div class="box-tools pull-right">

                <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
                        title="Collapse">
                    <i class="fa fa-minus"></i>
                </button>
            </div>
        </div>
        <div class="box-body">
            <div class="col-lg-12 text-center">

                <img id="logo_inicio" style="max-width:100%; width:540px;" />

            </div>
        </div>
    </div>
</section>
